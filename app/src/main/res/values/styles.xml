<resources>

    <style name="ThemeBase" parent="android:Theme.Light" />

    <style name="ThemeApp" parent="ThemeBase" />

    <style name="ThemeBaseActionbar" parent="ThemeBase">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarSize">@dimen/wx_actionbar_height</item>
        <item name="actionBarSize">@dimen/wx_actionbar_height</item>
        <item name="android:windowBackground">@color/wx_divide</item>
    </style>

    <style name="ThemeDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/wx_black</item>
        <item name="android:windowBackground">@color/wx_divide</item>
    </style>

    <style name="ThemePermission" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wx_green_26B683</item>
        <item name="colorPrimaryDark">@color/wx_black_111111</item>
        <item name="colorAccent">@color/wx_green_24B781</item>
    </style>

    <style name="ThemePermission.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemePermission.NoActionBar.Permissions">
        <item name="android:windowBackground">@color/wx_green_26B683</item>
    </style>

    <style name="ThemeBaseDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 对话框是否浮动 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 对话框无标题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 对话框是否透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景昏暗是否启用 -->
        <item name="android:windowBackground">@color/wx_transparent</item>
        <!-- 除去背景色 -->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- 自动弹出输入法 -->
    </style>

    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wx_divide</item>
    </style>

</resources>